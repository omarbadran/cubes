{
  "name": "@cubes/{{name}}",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "input": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "esbuild ./src/**/* --outdir=dist",
    "build:node": "yarn build --platform=node --format=esm",
    "build:browser": "yarn build --minify",
    "clean": "rimraf coverage dist tmp",
    "start": "tsrun -f src/index.ts",
    "dev": "yarn start -w",
    "typings": "tsc ./src/**/* -noEmit",
    "test": "tsrun -f tests/all.test.ts"
  },
  "dependencies": {
    "@cubes/tsrun": "workspace:*"
  },
  "devDependencies": {
    "esbuild": "^0.15.5",
    "typescript": "^4.7.4",
    "rimraf": "^3.0.2"
  }
}
