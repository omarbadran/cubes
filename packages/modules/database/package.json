{
  "name": "@cubes/database",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "input": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean & yarn types && esbuild ./src/**/* --outdir=dist",
    "build:node": "yarn build --platform=node --format=esm",
    "build:browser": "yarn build --minify",
    "clean": "rimraf coverage dist tmp",
    "types": "tsc src/**/*.ts --declaration --emitDeclarationOnly --outDir dist",
    "test": "tsr -f tests/all.test.ts"
  },
  "packageManager": "yarn@3.2.2",
  "dependencies": {
    "@cubes/tsr": "workspace:*",
    "@types/node": "^18.7.13",
    "cbor": "^8.1.0",
    "charwise": "^3.0.1",
    "hyperbee": "^1.10.1",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "esbuild": "^0.15.5",
    "hypercore": "^10.2.0",
    "random-access-memory": "^5.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  }
}
